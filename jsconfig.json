{
    "compilerOptions": {
        "target": "ES2018",
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "strictFunctionTypes": false,
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./**/*.js",
        "/*.js"
    ],
    "exclude": [ "./**/node_modules" ],
    "types": [ "node" ]
}   